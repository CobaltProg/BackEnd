<style>
    
    #background {
        height: 100vh;
        background-color: #0a2e4e;
        background-position: center;
        filter: blur(2px);
    }

    #content {
        height: 100vh;
        width: 100%;
        padding: 8vh 2vh 0 2vh;
        position: absolute;
        top: 0;
        left: 0;
    }

    .styled-title {
        background-color: black;
        padding: 10px 15px;
    }
    .actionDiv {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
    }

    #bandeau, #lapin_corps, #oeil_droit, #oeil_gauche, #oreille_droite, #oreille_gauche, #Patte_droite, #Patte_gauche {
        animation: lapin 1s ease-in-out infinite alternate;
        transform-origin: bottom;
    }

    #bandeau {
        animation: bandeau .2s ease-in-out infinite alternate;
        transform-origin: bottom;
    }

    #Patte_droite {
        animation: patte 1s ease-in-out infinite alternate;
        transform-origin: bottom;
    }

    @keyframes lapin {
        from {transform: rotateX(-15deg);}
        to {transform: rotateX(15deg);}
    }

    @keyframes bandeau {
        from {transform: rotateZ(-0.5deg);}
        to {transform: rotateZ(0.5deg);}
    }

    @keyframes patte {
        from {transform: rotate(1deg);}
        to {transform: rotate(10deg);}
    }
  </style>
</head>
